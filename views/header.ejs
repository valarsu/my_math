        <script>
          $(function () {
            var now = new Date(),
                mon = {
                  0: '日',
                  1: '一',
                  2: '二',
                  3: '三',
                  4: '四',
                  5: '五',
                  6: '六'
                };
            $('#monday').html(mon[now.getDay()]);
            $('#date').html(now.getDate());
            $('#year').html(now.getFullYear());
            $('#month').html((now.getMonth() + 1));
          });
        </script>
