<br />
<% post.comments.forEach(function (comment, index) { %>
  <div style="padding-left:4em">
    <p><img src="<%= comment.head %>" class="l_head" /><a href="<%= comment.website %>"><%= comment.name %></a>
    <span class="info"> 回复于 <%= comment.time %></span></p>
    <p><%- comment.content %></p>
  </div>
<% }) %>

<form method="post" id="post_comment">
<% if (user) { %>
  <h3>姓名</h3><input type="text" name="name" value="<%= user.name %>" /><br />
  <h3>邮箱</h3><input type="text" name="email" value="<%= user.email %>" /><br />
  <h3>网址</h3><input type="text" name="website" value="/u/<%= user.name %>" /><br />
<% } else { %>
  <h3>姓名</h3><input type="text" name="name" /><br />
  <h3>邮箱</h3><input type="text" name="email" /><br />
  <h3>网址</h3><input type="text" name="website" value="http://" /><br />
<% } %>
  <textarea name="content" rows="5" cols="80"></textarea><br />
  <input class="btn" type="submit" value="留言" />
</form>